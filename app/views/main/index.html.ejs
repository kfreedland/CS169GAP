<!--Beginning Main Web Page-->

<!--Find Activity Page-->
<div id="find_activity_page" data-role="page"> 
  <!--Navigation Bar-->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div data-role="header">
              <h1>
                Group Activity Planner
              </h1>
              <div data-type="horizontal" data-group="controlgroup" class="ui-btn-right">
                <a href="/login" id="login_button" type="submit" name="login" value="Login" data-inline="true" data-theme="a" data-role="button">Login</a>
                <a href="/users/add" id="sign_up_button" type="submit" name="signup" value="Sign Up" data-inline="true" data-theme="a" data-role="button">Sign Up</a>
              </div>
            </div>
          </div>
        </div>

    <!--Find Activity Content (For modularity)-->
