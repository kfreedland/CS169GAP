<div class="hero-unit">
  <h2 class="name"><%= activity.name %></h2>
  <%- linkTo('Edit this activity', editActivityPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Activity Properties</h2>
<% for(var i in activity) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= activity[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>